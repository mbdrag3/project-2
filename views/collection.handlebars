<body>
    <div class="collection-container">
        <h1>My Pok√©mon Collection</h1>
        <div class="profile-dropdown">
            <button onclick="toggleDropdown()">My Profile</button>
            <div id="dropdown-content" class="dropdown-content">
                <a href="/profile">View Profile</a>
                <a href="/logout">Logout</a>
            </div>
        </div>
        
        <h2>My Cards</h2>
        <div class="cards-container">
            {{#each myCollection}}
            <div class="card">
                <h2>{{name}}</h2>
                <p>Type: {{type}}</p>
                <p>HP: {{hp}}</p>
            </div>
            {{/each}}
        </div>

        <h2>Wanted Cards</h2>
        <div class="cards-container">
            {{#each wantedCards}}
            <div class="card">
                <h2>{{name}}</h2>
                <p>Type: {{type}}</p>
                <p>HP: {{hp}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</body>